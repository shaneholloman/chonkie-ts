  "files": [
    "dist"
  ],
  "keywords": [
    "chonkie",
    "chunking",
    "text-processing",
    "tokenization"
  ],
  "dependencies": {
    "@chonkiejs/chunk": "^0.9.3"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
